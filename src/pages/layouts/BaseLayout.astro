---
import "../assets/app.css";
const { title = "Astro DaisyUI Sidebar Demo" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen">
    <div class="drawer lg:drawer-open">
      <!-- Toggle for mobile -->
      <input id="sidebar-drawer" type="checkbox" class="drawer-toggle" />

      <!-- Main content -->
      <div class="drawer-content flex flex-col">
        <!-- Top bar with menu button on mobile -->
        <div class="w-full navbar bg-base-200 lg:hidden">
          <label for="sidebar-drawer" class="btn btn-ghost">
            ☰
          </label>
          <span class="ml-2 font-bold text-xl">{title}</span>
        </div>

        <main class="p-6 flex-1">
          <slot />
        </main>

        <footer class="footer footer-center p-4 bg-base-200 text-base-content">
          <aside>
            <p>© 2025 MySite. Built with Astro + React + DaisyUI</p>
          </aside>
        </footer>
      </div>

      <!-- Sidebar navigation -->
      <div class="drawer-side">
        <label for="sidebar-drawer" class="drawer-overlay"></label>
        <aside class="menu p-4 w-64 bg-base-100 text-base-content min-h-full">
          <h2 class="text-2xl font-bold mb-6">MySite</h2>
          <ul class="menu">
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
        </aside>
      </div>
    </div>
  </body>
</html>
